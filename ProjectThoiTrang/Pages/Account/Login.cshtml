@page
@model ProjectThoiTrang.Pages.Account.LoginModel
@{
	ViewData["Title"] = "Đăng nhập";
	Layout = "~/Pages/Shared/_Layout.cshtml";
}
<section class="breadcrumb-option">
    <div class="container">
        <div class="row">
            <div class="col-lg-12">
                <div class="breadcrumb__text">
                    <h4>Đăng nhập</h4>
                    <div class="breadcrumb__links">
                        <a asp-page="/Index">Trang chủ</a>
                        <span>Đăng nhập</span>
                    </div>
                </div>
            </div>
        </div>
    </div>
</section>
<div class="row">
    <div class="col-lg-3"></div>
    <div class="col-lg-6">
        <div class="container">
            <form method="post" style="margin-bottom:20px">
                <div class="row">
                    <div class="col-2"></div>
                    <div class="col-8">
                        <h6 style="margin-top:20px;text-align:center" class="checkout__title">Đăng nhập</h6>
                        <div class="container">
                            <div class="checkout__input">
                                <p>Email<span>*</span></p>
                                <input asp-for="Email" />
                                <span asp-validation-for="Email"></span>
                            </div>
                        </div>
                        <div class="container">
                            <div class="checkout__input">
                                <p>Mật khẩu<span>*</span></p>
                                <input asp-for="Password" type="password" />
                                <span asp-validation-for="Password"></span>
                            </div>
                        </div>
                        <div class="row">
                            <div class="col-6" style="align-items:self-start">
                                <button class="primary-btn" type="submit" style="width:100%;height:auto%;text-align:center">Đăng nhập</button>
                            </div>
                            <div class="col-6" style="align-items:self-end">
                                <a class="primary-btn" href="/Account/Register" style="width:100%;height:auto%;text-align:center;display: block">Đăng ký</a>
                            </div>
                        </div>
                    </div>
                    <div class="col-2"></div>
                    
                </div>
            </form>
        </div>
    </div>
    <div class="col-lg-3"></div>
</div>
