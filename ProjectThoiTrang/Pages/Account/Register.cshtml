@page
@model ProjectThoiTrang.Pages.Account.RegisterModel
@{
    ViewData["Title"] = "Đăng ký tài khoản";
    Layout = "~/Pages/Shared/_Layout.cshtml";
}
<section class="breadcrumb-option">
    <div class="container">
        <div class="row">
            <div class="col-lg-12">
                <div class="breadcrumb__text">
                    <h4>Đăng ký tài khoản</h4>
                    <div class="breadcrumb__links">
                        <a asp-page="/Index">Trang chủ</a>                        
                        <span>Đăng ký tài khoản</span>
                    </div>
                </div>
            </div>
        </div>
    </div>
</section>
<div class="row">
    <div class="col-lg-3"></div>
    <div class="col-lg-6">
        <form method="post" style="margin-bottom:20px">
            <div class="row">
                <div class="col-lg-6">
                    <h6 style="margin-top:20px" class="checkout__title">Thông tin tài khoản</h6>
                    <div class="checkout__input">
                        <p>Email<span>*</span></p>
                        <input asp-for="@Model.newAccount.Email" type="text">
                        <span asp-validation-for="@Model.newAccount.Email"></span>
                    </div>
                </div>
            </div>
            <div class="row">
                <div class="col-lg-6">
                    <div class="checkout__input">
                        <p>Mật khẩu<span>*</span></p>
                        <input asp-for="@Model.newAccount.Password" type="password">
                        <span asp-validation-for="@Model.newAccount.Password"></span>
                    </div>
                </div>
            </div>
            <div class="row">
                <div class="col-lg-6">
                    <div class="checkout__input">
                        <p>Họ tên<span>*</span></p>
                        <input asp-for="@Model.newAccount.FullName" type="text">
                        <span asp-validation-for="@Model.newAccount.FullName"></span>
                    </div>
                </div>
            </div>
            <div class="row">
                <div class="col-lg-6">
                    <div class="checkout__input">
                        <p>Số điện thoại<span>*</span></p>
                        <input asp-for="@Model.newAccount.PhoneNumber" type="text">
                        <span asp-validation-for="@Model.newAccount.PhoneNumber"></span>
                    </div>
                </div>
            </div>
            <div class="row">
                <div class="col-lg-6">
                    <div class="checkout__input">
                        <p>Ngày sinh<span>*</span></p>
                        <input asp-for="@Model.newAccount.Birthday" type="date">
                        <span asp-validation-for="@Model.newAccount.Birthday"></span>
                    </div>
                </div>
            </div>
            <div class="row">
                <div class="col-lg-6">
                    <div class="checkout__input">
                        <p>Địa chỉ<span>*</span></p>
                        <input asp-for="@Model.newAccount.Address" type="text">
                        <span asp-validation-for="@Model.newAccount.Address"></span>
                    </div>
                </div>
            </div>
            <div class="row">                
                <div class="col-lg-6">
                    <button class="primary-btn" type="submit">Đăng ký</button>
                </div>
            </div>
        </form>
        <a style="margin-bottom:20px" class="primary-btn" asp-page="/Account/Login">Về trang đăng nhập</a>
    </div>
    <div class="col-lg-3"></div>
    
</div>


