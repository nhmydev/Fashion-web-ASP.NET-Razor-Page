@page
@model ProjectThoiTrang.Areas.Admin.Pages.AdminRoles.IndexModel
@{
	ViewData["Title"] = "Danh sách quyền truy cập";
	Layout = "~/Areas/Admin/Pages/Shared/_AdminLayout.cshtml";
}
<div class="container text-center">
    <h1>Dach sách quyền truy cập</h1>
</div>


<div class="card">
    <div class="card-body">
        <div class="row">
            <div class="col-lg-3"></div>
            <div class="col-lg-3"></div>
            <div class="col-lg-6 text-right">
                <a class="btn btn-primary btn-sm" asp-page="./Create"><i class="bi bi-plus-circle"></i> Thêm quyền truy cập</a>
            </div>
        </div>

        <table class="table table-hover">
            <thead>
                <tr>
                    <th>ID</th>
                    <th>Tên</th>
                    <th>Mô tả</th>
                </tr>
            </thead>
            <tbody>
                @if (Model != null)
                {
                    foreach (var item in Model.Roles)
                    {
                        <tr>
                            <td>@item.RoleId</td>
                            <td>@item.RoleName</td>
                            <td>@item.Description</td>
                            <td>
                                <a class="btn btn-primary btn-sm mr-2" asp-page="./Edit" asp-route-id="@item.RoleId"><i class=" icon-pencil"></i> Chỉnh sửa</a>
                                <a class="btn btn-secondary btn-sm mr-2" asp-page="./Details" asp-route-id="@item.RoleId"><i class="bi bi-info-circle"></i> Chi tiết</a>
                                <a class="btn btn-warning btn-sm mr-2" asp-page="./Delete" asp-route-id="@item.RoleId"><i class="  icon-trash"></i> Xóa</a>
                            </td>
                        </tr>
                    }
                }
            </tbody>
        </table>
    </div>
</div>