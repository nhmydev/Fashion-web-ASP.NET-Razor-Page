@page
@model ProjectThoiTrang.Areas.Admin.Pages.AdminCustomers.EditModel
@{
}

<div class="container text-center">
    <h1> Thông tin khách hàng</h1>
</div>
<div class="card">
    <div class="card-body">
        <div class="row">
            <div class="col-lg-3"></div>
            <div class="col-lg-6">
                <form method="post">
                    <div asp-validation-summary="ModelOnly" class="text-danger"></div>
                    <input type="hidden" asp-for="Customer.CusId" />
                    <div class="form-group">
                        <label asp-for="Customer.Fullname" class="control-label"></label>
                        <input asp-for="Customer.Fullname" class="form-control" readonly />
                        <span asp-validation-for="Customer.Fullname" class="text-danger"></span>
                    </div>
                    <div class="form-group">
                        <label asp-for="Customer.Birthday" class="control-label"></label>
                        <input asp-for="Customer.Birthday" class="form-control" readonly />
                        <span asp-validation-for="Customer.Birthday" class="text-danger"></span>
                    </div>                    
                    <div class="form-group">
                        <label asp-for="Customer.Address" class="control-label"></label>
                        <input asp-for="Customer.Address" class="form-control" readonly />
                        <span asp-validation-for="Customer.Address" class="text-danger"></span>
                    </div>
                    <div class="form-group">
                        <label asp-for="Customer.Email" class="control-label"></label>
                        <input asp-for="Customer.Email" class="form-control" readonly />
                        <span asp-validation-for="Customer.Email" class="text-danger"></span>
                    </div>
                    <div class="form-group">
                        <label asp-for="Customer.Phone" class="control-label"></label>
                        <input asp-for="Customer.Phone" class="form-control" readonly />
                        <span asp-validation-for="Customer.Phone" class="text-danger"></span>
                    </div>
                    <div class="form-group">
                        <label asp-for="Customer.CreateDate" class="control-label"></label>
                        <input asp-for="Customer.CreateDate" class="form-control" readonly />
                        <span asp-validation-for="Customer.CreateDate" class="text-danger"></span>
                    </div>                    
                    <div class="form-group form-check">
                        <select asp-for="Customer.Active" class="form-control">
                            @if (Model.Customer.Active == true)
                            {
                                <option value="true" selected>Kích hoạt</option>
                                <option value="false">Vô hiệu hóa</option>
                            }
                            else
                            {
                                <option value="true">Kích hoạt</option>
                                <option value="false" selected>Vô hiệu hóa</option>
                            }
                        </select>
                    </div>
                    <div class="row">
                        <div class="col-md-4">
                            <button type="submit" class="btn btn-success mr-2 btn-fw">Lưu</button>
                        </div>
                        <div class="col-md-4">
                            <a class="btn btn-dark btn-fw" asp-page="./Index">
                                <i class="icon-logout"></i> Quay về
                            </a>
                        </div>
                    </div>
                </form>
            </div>
            <div class="col-lg-3"></div>
        </div>
    </div>
</div>
