@page
@model ProjectThoiTrang.Areas.Admin.Pages.AdminCategories.IndexModel
@{
    ViewData["Title"] = "Danh sách danh mục";
    Layout = "~/Areas/Admin/Pages/Shared/_AdminLayout.cshtml";
}
<div class="container text-center">
    <h1>Danh sách danh mục</h1>
</div>


<div class="card">
    <div class="card-body">
        <div class="row">
            <div class="col-lg-3"></div>
            <div class="col-lg-3"></div>
            <div class="col-lg-6 text-right">
                <a class="btn btn-primary btn-sm" asp-page="./Create"><i class="bi bi-plus-circle"></i> Thêm danh mục</a>
            </div>
        </div>

        <table class="table table-hover">
            <thead>
                <tr>
                    <th>ID</th>
                    <th>Tên danh mục</th>
                    <th>Trạng thái</th>
                    <th>Thao tác</th>
                </tr>
            </thead>
            <tbody>
                @if (Model != null)
                {
                    foreach (var item in Model.Categories)
                    {
                        <tr>
                            <td>@item.CatId</td>
                            <td>@item.Catname</td>
                            @if (item.Published == true)
                            {
                                <td>Public</td>
                            }
                            else
                            {
                                <td>Not public</td>
                            }
                            <td>
                                <a class="btn btn-primary btn-sm mr-2" asp-page="./Edit" asp-route-id="@item.CatId"><i class=" icon-pencil"></i> Chỉnh sửa</a>
                                <a class="btn btn-secondary btn-sm mr-2" asp-page="./Details" asp-route-id="@item.CatId"><i class="bi bi-info-circle"></i> Chi tiết</a>
                            </td>
                        </tr>
                    }
                }
            </tbody>
        </table>
    </div>
</div>

