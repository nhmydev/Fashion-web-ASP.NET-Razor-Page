@page
@model ProjectThoiTrang.Areas.Admin.Pages.AdminCategories.DetailsModel

@{
	ViewData["Title"] = "Thông tin truy cập";
	Layout = "~/Areas/Admin/Pages/Shared/_AdminLayout.cshtml";
}
<div class="container text-center">
    <h1>Chi tiết danh mục</h1>
</div>

<div class="card">
    <div class="card-body">
        <div class="row">
            <div class="col-lg-3"></div>
            <div class="col-lg-6">
                <table class="table ">
                    <tr>
                        <td>Tên danh mục</td>
                        <td>@Model.Category.Catname</td>
                    </tr>                    
                    <tr>
                        <td>Trạng thái</td>
                        @if (Model.Category.Published == true)
                        {
                            <td>Public</td>
                        }
                        else
                        {
                            <td>Not public</td>
                        }
                    </tr>
                    <tr>
                        <td>
                            <a class="btn btn-primary btn-sm" asp-page="./Edit" asp-route-id="@Model?.Category.CatId"><i class=" icon-pencil"></i> Chỉnh sửa </a>
                        </td>
                        <td>
                            <a class="btn btn-dark btn-sm" asp-page="./Index"><i class="icon-logout"></i> Quay về </a>
                        </td>
                    </tr>
                </table>
            </div>
            <div class="col-lg-3"></div>
        </div>
    </div>
</div>